{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "hooks": {
    "before:init": ["yarn pack --out '%s_%v.tgz'"]
  },
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "${version}",
    "commitArgs": ["-S"],
    "tagArgs": ["-s"],
    "tagExclude": "*[-]*"
  },
  "npm": {
    "publish": true,
    "ENABLE_LATER_publishArgs": ["--provenance"]
  },
  "github": {
    "release": true,
    "autoGenerate": true,
    "assets": [
      "*.tgz"
    ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
